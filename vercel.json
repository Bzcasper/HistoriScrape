# vercel.json
{
    "version": 2,
    "builds": [
        {
            "src": "main.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.9",
                "maxLambdaSize": "15mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "main.py"
        }
    ],
    "env": {
        "PYTHONPATH": ".",
        "PORT": "8000"
    },
    "buildCommand": "python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt",
    "installCommand": "python3 -m ensurepip --upgrade && python3 -m pip install --upgrade pip && python3 -m pip install -r requirements.txt",
    "devCommand": "uvicorn main:app --host 0.0.0.0 --port 8000",
    "outputDirectory": "."
}